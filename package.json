{
  "name": "fassbender-shopify-theme",
  "version": "0.0.1",
  "description": "Shopify theme based on Bootstrap 4",
  "main": "src/ts/main.ts",
  "typings": "src/ts/types",
  "scripts": {
    "test": "npm run ts-test",
    "copy-modules": "node ./utils/copy_modules.js",
    "sass": "node-sass --output-style compressed src/scss/bundle.scss -o theme/assets/ && postcss postcss -c postcss.config.js theme/assets/bundle.css -o theme/assets/bundle.css && theme upload --dir ./theme assets/bundle.css --force",
    "sass-watch": "nodemon -e scss -x 'npm run sass'",
    "ts": "webpack && theme upload --dir ./theme assets/bundle.js --force",
    "ts-watch": "webpack --watch",
    "ts-test": "tslint -c tslint.json 'src/**/*.ts' && tsc --noEmit",
    "build": "npm run copy-modules && npm run ts-test && npm run ts && npm run sass",
    "_watch": "theme watch --dir './theme' --force & npm run ts-watch & npm run sass-watch",
    "watch": "npm run copy-modules && npm run ts-test && npm run _watch"
  },
  "repository": {
    "type": "git",
    "url": "https://git.mediamor.de/jumplink.eu/fassbender-shopify-theme"
  },
  "keywords": [
    "JumpLink",
    "Bootstrap4",
    "Shopify"
  ],
  "author": "Pascal Garber <pascal@jumplink.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://git.mediamor.de/jumplink.eu/art-code-studio-shopify-theme/issues"
  },
  "homepage": "https://art-code-studio.myshopify.com",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.54",
    "@babel/core": "^7.0.0-beta.54",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.54",
    "@babel/plugin-proposal-object-rest-spread": "^7.0.0-beta.54",
    "@babel/preset-env": "^7.0.0-beta.54",
    "@babel/preset-typescript": "^7.0.0-beta.54",
    "autoprefixer": "^8.6.5",
    "babel-loader": "^8.0.0-beta.4",
    "babelify": "^8.0.0",
    "browserify": "^16.2.2",
    "css-flip": "^0.5.0",
    "css-loader": "^0.28.11",
    "csso-cli": "^1.1.0",
    "extract-loader": "^2.0.1",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "gulp": "^3.9.1",
    "gulp-jsoncombine": "^1.0.4",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^3.2.0",
    "html-loader": "^0.5.5",
    "jshint": "^2.9.5",
    "mini-css-extract-plugin": "^0.4.1",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.3",
    "parcel-bundler": "^1.9.7",
    "postcss": "^7.0.1",
    "postcss-cli": "^5.0.1",
    "postcss-loader": "^2.1.5",
    "postcss-modules": "^1.3.0",
    "sass-loader": "^7.0.3",
    "shelljs": "^0.8.2",
    "style-loader": "^0.21.0",
    "ts-loader": "^4.4.2",
    "tsify": "^4.0.0",
    "typescript": "^2.9.2",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.11.0",
    "webpack": "^4.16.2",
    "webpack-cli": "^3.1.0",
    "webpack-stream": "^4.0.3",
    "yargs": "^5.0.0"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-beta.54",
    "@types/debug": "^0.0.30",
    "@types/jquery": "^3.3.5",
    "@types/promise-polyfill": "^6.0.0",
    "bootstrap": "^4.1.3",
    "debug": "^3.1.0",
    "jquery": "^3.3.1",
    "promise-polyfill": "^8.0.0",
    "rxjs": "^6.2.2",
    "tinybind": "github:JumpLinkNetwork/tinybind#master"
  }
}
