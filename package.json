{
  "name": "fassbender-shopify-theme",
  "version": "1.4.0",
  "description": "Shopify theme based on Bootstrap 4",
  "main": "src/ts/main.ts",
  "typings": "src/ts/types",
  "scripts": {
    "test": "npm run ts-test",
    "copy-modules": "node ./utils/copy_modules.js",
    "sass": "node-sass --output-style compressed src/scss/bundle.scss -o theme/assets/ && postcss -c postcss.config.js theme/assets/bundle.css -o theme/assets/bundle.css && theme deploy --dir ./theme assets/bundle.css",
    "sass-watch": "nodemon -e scss -x 'npm run sass'",
    "webpack": "webpack",
    "webpack:dev": "webpack --config webpack.config.dev.js",
    "ts": "npm run webpack && theme upload --dir ./theme assets/bundle.js",
    "ts:dev": "npm run webpack:dev && theme upload --dir ./theme assets/bundle.js",
    "ts-babel": "babel src/ts/main.ts --extensions '.ts'",
    "ts-watch": "npm run webpack -- --watch",
    "ts-watch:dev": "npm run webpack:dev -- --watch",
    "ts-test": "tslint -c tslint.json 'src/**/*.ts' && tsc --noEmit",
    "build": "npm run copy-modules && npm run ts-test && npm run ts && npm run sass",
    "_watch": "theme watch --dir './theme' & npm run ts-watch & npm run sass-watch",
    "_watch:dev": "theme watch --dir './theme' & npm run ts-watch:dev & npm run sass-watch",
    "watch": "npm run copy-modules && npm run ts-test && npm run _watch",
    "watch:dev": "npm run copy-modules && npm run ts-test && npm run _watch:dev",
    "download": "theme download --dir './theme'",
    "checkout": "uglifyjs checkout/custom-checkout.js -o checkout/custom-checkout.min.js -c -m; cleancss checkout/custom-checkout.css -o checkout/custom-checkout.min.css "
  },
  "repository": {
    "type": "git",
    "url": "https://git.mediamor.de/jumplink.eu/fassbender-shopify-theme"
  },
  "keywords": [
    "JumpLink",
    "Bootstrap4",
    "Shopify"
  ],
  "author": "Pascal Garber <pascal@jumplink.eu>",
  "license": "MIT",
  "bugs": {
    "url": "https://git.mediamor.de/jumplink.eu/art-code-studio-shopify-theme/issues"
  },
  "homepage": "https://art-code-studio.myshopify.com",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.2.0",
    "@babel/plugin-syntax-export-default-from": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-typescript": "^7.1.0",
    "autoprefixer": "^9.4.3",
    "babel-loader": "^8.0.4",
    "babel-plugin-array-includes": "^2.0.3",
    "babelify": "^10.0.0",
    "browserify": "^16.2.3",
    "clean-css-cli": "^4.2.1",
    "css-flip": "^0.5.0",
    "css-loader": "^2.0.1",
    "csso-cli": "^2.0.0",
    "extract-loader": "^3.1.0",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^3.0.1",
    "gulp": "^4.0.0",
    "gulp-jsoncombine": "^1.0.4",
    "gulp-util": "^3.0.8",
    "gulp-zip": "^4.2.0",
    "html-loader": "^0.5.5",
    "jshint": "^2.9.7",
    "mini-css-extract-plugin": "^0.5.0",
    "node-sass": "^4.11.0",
    "nodemon": "^1.18.9",
    "parcel-bundler": "^1.11.0",
    "postcss": "^7.0.7",
    "postcss-cli": "^6.1.0",
    "postcss-loader": "^3.0.0",
    "postcss-modules": "^1.4.1",
    "sass-loader": "^7.1.0",
    "shelljs": "^0.8.3",
    "style-loader": "^0.23.1",
    "ts-loader": "^5.3.2",
    "tsify": "^4.0.1",
    "tslint": "^5.12.0",
    "typescript": "^3.2.2",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0",
    "watchify": "^3.11.0",
    "webpack": "^4.28.1",
    "webpack-cli": "^3.1.2",
    "webpack-stream": "^5.2.1",
    "yargs": "^12.0.5"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.2.0",
    "@ribajs/core": "^0.17.0",
    "@ribajs/router": "^0.17.3",
    "@ribajs/shopify": "^0.17.1",
    "@types/debug": "^0.0.31",
    "@types/jquery": "^3.3.28",
    "@types/p-queue": "^3.0.0",
    "bootstrap": "^4.1.3",
    "debug": "^3.2.6",
    "jquery": "^3.3.1",
    "p-queue": "^3.0.0",
    "popper.js": "^1.14.6",
    "rxjs": "^6.3.3"
  }
}
