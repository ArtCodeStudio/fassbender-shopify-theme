<div class="container pt-5">
  <div class="row">
  
    {% comment %}
    <div class="col-xs-12 text-center">
      <h1 class="page-title mt-0 mb-4">{{ page.title }}</h1>
    </div>
    {% endcomment %}

    {% unless page.content == blank %}
        <div class="col-xs-12 col-md-8 offset-md-2 rte">
        {{ page.content }}
        </div>
    {% endunless %}

    <div class="col-xs-12 col-md-8 offset-md-2 mt-4">
        <strong>Credits</strong><br />
        <a href="https://feinfineart.de">Design by feinfineart</a><br />
        <a href="https://www.jumplink.eu/">Web Engineering by JumpLink</a>
    </div>

  </div>
</div>