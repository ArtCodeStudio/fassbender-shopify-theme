<div class="container pt-5">
  <div class="row">
  
    <div class="col-xs-12 text-left">
      <h1 class="page-title mt-0 mb-4">{{ page.title }}</h1>
    </div>

    {% unless page.content == blank %}
      <div class="col-xs-12 rte">
        {{ page.content }}
      </div>
    {% endunless %}

    <div class="col-xs-12 py-4">
      <button id="start" class="center-block btn btn-outline-primary">Play</button>
    </div>

    <div class="col-xs-12">

      <div id="tetris">
        <div id="menu">
          <canvas id="upcoming" class="bg-body" width="200" height="200"></canvas>
          <div class="info p-2">
            <p class="m-0">Score <span id="score" class="text-success font-weight-bold">00000</span></p>
            <p class="m-0">Rows <span id="rows" class="text-info font-weight-bold">0</span></p>
          </div>
        </div>
        <canvas id="canvas" data-xthreshold="20" data-ythreshold="20">
          Sorry, this example cannot be run because your browser does not support the &lt;canvas&gt; element
        </canvas>
      </div>

    </div>

  </div>
</div>


