<div class="container">
  <h1>{{ page.title }}</h1>
  <div class="row my-1">
    <div class="col-xs-12 col-md-6 col-lg-8 rte">
      {{ page.content }}
    </div>
  </div>

  {% for i in (1..2) %}
    {% capture image %}location_block_{{ i }}_image{% endcapture %}
    {% capture title %}location_block_{{ i }}_title{% endcapture %}
    {% capture text %}location_block_{{ i }}_text{% endcapture %}
    <div class="row my-1">
      <div class="col-xs-12 col-md-offset-1 col-md-5 col-lg-offset-2 col-lg-4">
        <div class="background-box ratio-16-9" style="background-image: url({{ image | asset_url }});" title="{{ settings[title] | escape }}"></div>
      </div>
      <div class="col-xs-12 col-md-5 col-lg-4 py-1">
        <p class="rte">
          {{ settings[title] | escape }}
          <br>
          {{ settings[text] }}
        </p>
      </div>

      <div class="col-xs-12 text-center pt-2 pb-3">
        <a href="mailto:{{shop.email}}" class="btn btn-primary ">{{ 'home.appointment.make' | t }}</a>
      </div>

    </div>
  {% endfor %}
</div>

