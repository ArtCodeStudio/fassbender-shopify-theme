<div class="ah-container-fluid">
  <div class="container-fluid">

    <h1 class="hidden">{{ page.title }}</h1>
    <div class="row m-y-1">
      <div class="col-xs-12 col-md-6 col-lg-8 rte">
        {{ page.content }}
      </div>
    </div>

    {% for i in (1..6) %}
      {% capture image %}homepage_block_{{ i }}_image{% endcapture %}
      {% capture title %}homepage_block_{{ i }}_title{% endcapture %}
      <div class="row m-y-1">
        <div class="col-xs-12 col-md-offset-1 col-md-5 col-lg-offset-2 col-lg-4">
          <div class="background-box ratio-16-9" style="background-image: url({{ image | asset_url }});" title="{{ settings[title] | escape }}"></div>
        </div>
        <div class="col-xs-12 col-md-5 col-lg-4 p-y-1">
          {% for k in (1..6) %}
            {% capture line_title %}treatments_block_{{ i }}_line_{{ k }}_title{% endcapture %}
            {% capture line_price %}treatments_block_{{ i }}_line_{{ k }}_price{% endcapture %}
            {% capture line_subtext %}treatments_block_{{ i }}_line_{{ k }}_subtext{% endcapture %}

            {% unless settings[line_title] == blank %}
              <p>
                <div class="text-left pull-left">{{ settings[line_title] | escape }}</div> <div class="text-right pull-right">{{ settings[line_price] | escape }}</div>
                <br>
                {% unless settings[line_subtext] == blank %}
                  <div class="text-gray-light">{{ settings[line_subtext] | escape }}</div>
                {% endunless %}
              </p>
            {% endunless %}
          {% endfor %}
        </div>

        <div class="col-xs-12 text-center p-t-2 p-b-3">
          <a href="mailto:{{shop.email}}" class="btn btn-primary ">{{ 'home.appointment.make' | t }}</a>
        </div>

      </div>
    {% endfor %}
  </div>
</div>

