{% include 'jumplink-utils-translate', translate: page.title, path: 'titles', de: page.metafields["global"]["de-title"], default: page.title %}

<div class="container-fluid pt-5" id="page-{{ page.handle }}">
  <div class="row pt-md-5">
      <div class="col-12 col-md-8 offset-md-2 col-lg-6 scrollbar-x-auto rte">
        <h2>{{ translated }}</h2>
      </div>
    {% unless page.content == blank %}
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 rte" rv-i18n-html="">
        {{ page.content | default: page.metafields["global"]["en-content"]}}
        <template lang="default">{{ page.content | default: page.metafields["global"]["en-content"]}}</template>
        <template lang="de">{{ page.metafields["global"]["de-content"] | default: page.content }}</template>
        </div>
    {% endunless %}
    <div class="col-12 col-md-8 offset-md-2 col-lg-6">
      {% include 'jumplink-form-returns' %}
    </div>
  </div>
</div>