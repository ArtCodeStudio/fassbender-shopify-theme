{% assign estimateShippingRate = true %}
{% assign showLoginHeader = false %}
{% assign showCartPageLink = false %}

<div class="container-fluid pt-5">
  <div class="row pt-5">
    <div class="col-12 col-md-auto offset-md-2">
      <rv-shopify-cart shipping-address='{{ customer.default_address | json }}' estimate-shipping-rate="{{ estimateShippingRate }}">
        {% include 'jumplink-shopping-cart-body' with showLoginHeader, estimateShippingRate, showCartPageLink %}
      </rv-shopify-cart>

      <p class="my-3">
        <a class="btn btn-link px-0" href="/collections/all" rv-route="'/collections/all'" >
          <small rv-i18n-text="'cart.continue'">{{'cart.continue'|t}}</small>
        </a>
      </p>

    </div>
  </div>
</div>
