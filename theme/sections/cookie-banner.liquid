<rv-cookie-banner>
  <div class="container-fluid" rv-show="show">
    <div class="row d-flex align-items-center">
      <div class="col-auto d-none d-md-flex">
        <button class="btn btn-link d-flex align-items-center" rv-on-click="close">
          <rv-icon rv-src="'{{ 'iconset-x.svg' | asset_url }}'" size="16"></rv-icon>
        </button>
      </div>
      <div class="col-12 col-md text-md-right d-flex align-items-center justify-content-end pt-3 pt-md-0">
        <small rv-i18n-html="'sections.cookie-banner.content_html'">
        {{ 'content_html' | t: link1: section.settings.link1 }}
        <template name="link1">
          {{link1}}
        </template>
        </small>
      </div>
      <div class="col-12 col-md-auto text-right d-flex align-items-center justify-content-end pb-3 pb-md-0">
        <small>
          <a
            rv-route="'{{ section.settings.link2 }}'"
            rv-i18n-html="'sections.cookie-banner.link-label'"
            href="{{ section.settings.link2 }}"
            class="px-3"
          >
            {{ 'link-label' | t }}
          </a>
        </small>
        <button class="btn btn-link d-flex align-items-center d-flex d-md-none" rv-on-click="close">
          <small rv-i18n-text="'sections.cookie-banner.close'">{{ 'close' | t }}</small>
        </button>
        <button class="btn btn-link d-flex align-items-center" rv-on-click="accept">
          <small rv-i18n-text="'sections.cookie-banner.okay'">{{ 'okay' | t }}</small>
        </button> 
      </div>
    </div>
  </div>

</rv-cookie-banner>

{% schema %}
  {
    "name": "Cookie Banner",
    "class": "cookie-banner",
    "settings": [
      {
        "type":      "url",
        "id":        "link1",
        "label":     "Link 1"
      },
      {
        "type":      "url",
        "id":        "link2",
        "label":     "Link 2"
      }
    ],
    "blocks": [],
    "locales": {
      "en": {
        "content_html": "Hey there, we use <a rv-route=\"'{{ link1 }}'\" href=\"{{ link1 }}\">cookies</a> to improve our experience with our site.",
        "okay": "Okay",
        "close": "Close",
        "link-label": "Change"
      },
      "de": {
        "content_html": "Hey, wir verwenden <a rv-route=\"'{{ link1 }}'\" href=\"{{ link1 }}\">Cookies</a> um deine Benutzererfahrung mit unserer Website zu verbessern.",
        "okay": "Okay",
        "close": "Schlie√üen",
        "link-label": "Anpassen"
      }
    }
  }
{% endschema %}