{% paginate collections by settings.collections_per_page %}
  <ul class="list-group filter-collections">
    <li class="list-group-item list-group-title">
      {{ 'collection.filter.title' | t }}
    </li>
    {% for collectionItem in collections %}
      {% if collectionItem.handle == collection.handle %}
        <li class="list-group-item active">{{ collection.title | strip_html }}</li>
      {% else %}
        <a href="{{ collectionItem.url }}" class="list-group-item list-group-item-action">{{ collectionItem.title | strip_html }}</a>
      {% endif %}
    {% endfor %}
  </ul>
{% endpaginate %}