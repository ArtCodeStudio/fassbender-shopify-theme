{% assign href = link.url %}
{% if href == '/' %}
    {% assign isLink = false %}
{% else %}
    {% assign isLink = true %}
{% endif %}

{% comment %}Simon Flaherty 9 Nov 2016 - Change colors of one menu item, as per https://shopify.zendesk.com/agent/tickets/4246735{% endcomment %}
<li class="level-1 {{link.handle}} dropdown yamm">
  {% if link.handle == "gift-guide" %}
  
      {% if isLink %}
        <a href="{{ href }}" class="dropdown-toggle" data-toggle="dropdown" id="gift-guide">
            {{ link.title }}
        </a>
    {% else %}
        <div class="navbar-text dropdown-toggle" data-toggle="dropdown" id="gift-guide">
            {{ link.title }}
        </div>
    {% endif %}
  
  {% else %}
    {% if isLink %}
        <a href="{{ href }}" class="dropdown-toggle" data-toggle="dropdown">
            {{ link.title }}
        </a>
    {% else %}
        <div class="navbar-text dropdown-toggle" data-toggle="dropdown">
            {{ link.title }}
        </div>
    {% endif %}
  {% endif %}
  
  
  
  
    <ul class="dropdown-menu">
        <li>
            <div class="row">
                {% assign list_elements_per_col = settings.navbar_submenu_items_per_col %}
                {% assign min = list_elements_per_col | times: forloop.index0 %}
                {% assign max = list_elements_per_col | times: forloop.index %}
                <div class="col-xs-12">
                    <ul class="list-group m-b-0">
                        {% if has_sub_menu %}
                            {% for l in linklists[child_list_handle].links %}
                                {% comment %}TODO <li class="list-group-im {% if l.active %}active{% endif %}">{% endcomment %}
                                <li class="level-2 list-group-item {{ l.handle }}">
                                    <a href="{{ l.url }}">{{ l.title }}</a>
                                </li>
                            {% endfor %}
                        {% elsif has_sub_categories %}
                            {% for tag in link.object.all_tags %}
                                <li class="level-2 list-group-item {{ link.handle }}">
                                    <a href="{{ link.url }}/{{ tag | handle }}">{{ tag }}</a>
                                </li>
                            {% endfor %}
                        {% endif %}
                    </ul>
                </div>
            </div>
        </li>
    </ul>
</li>