{% comment %}
Featured Collections
Shows Collections from the navigation called `featured-collections`
{% endcomment %}

<div class="col-xs-12 featured-collections {{featuredLinklist}}">
    <div class="row">
        {% assign class-wrapper = classWrapperDefault %}
        {% for link in linklists.[featuredLinklist].links %}
            {% if link.type == 'collection_link' %}
                {% if linklists.[featuredLinklist].links.size == 1 %}
                    {% capture class %}
                        col-xs-12 {% if withOffset == true %}col-sm-4 col-sm-offset-4{% endif %}
                    {% endcapture %}
                {% elsif linklists.[featuredLinklist].links.size == 2 %}
                    {% assign class-wrapper = classWrapperSize2 %}
                    {% if forloop.index == 1 %}
                        {% capture class %}
                            col-xs-12 col-sm-6 {% if withOffset == true %}col-md-4 col-md-offset-2{% endif %}
                        {% endcapture %}
                    {% else %}
                        {% assign class = 'col-xs-12 col-sm-6 col-md-4' %}
                    {% endif %}
                {% elsif linklists.[featuredLinklist].links.size == 3 %}
                    {% assign class = 'col-xs-12 col-sm-4' %}
                {% else %}
                    {% assign class = 'col-xs-12 col-sm-6 col-md-3' %}
                {% endif %}
                
                <div class="{{ class }}">
                    <div class="{{ class-wrapper }}">
                        <div class="center-block">
                            {% assign image = link.object.image | img_url: '1024x1024' %}
                            {% if forloop.index == 1 and replaceImage1 == true %}
                                {% assign image = replaceImage1With | asset_url %}
                            {% endif %}
                            {% if forloop.index == 2 and replaceImage2 == true %}
                                {% assign image = replaceImage2With | asset_url %}
                            {% endif %}
                            <a href="{{link.url}}" class="background-box ratio-1-15" style="background-image: url({{image}});" title="{{link.object.title}} - {{link.title}}"></a>
                            <h2 class="{{ settings.homepage_featured_collections_text_align }} text-sans-serif title"><strong>{{link.object.title}}</strong></h2>
                            {% if showHr == true %}
                                <div class="row"> 
                                    <div class="col-xs-offset-5 col-xs-2">
                                        <hr class="border px-2 gray-base" />
                                    </div>
                                </div>
                            {% endif %}
                        </div>
                        <h4 class="{{ settings.homepage_featured_collections_text_align }} text-sans-serif subtext"><strong>{{link.title}}</strong></h4>
                    </div>
                </div>
            {% endif %}
        {% endfor %}
    </div>
</div>