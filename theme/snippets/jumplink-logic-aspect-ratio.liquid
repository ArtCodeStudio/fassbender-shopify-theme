{% comment %}
  Logic to set the aspect ratio variable
{% endcomment %}

{% if default_ratio %}
  {% assign ratio = default_ratio %}
{% else %}
  {% assign ratio = settings.collections_aspect_ratio %}
{% endif %}


{% comment %}
  Overwrite aspect ratio
  metafield namespace: c_f
  metafield key: jumplink_aspect_ratio
  value: [c][p]Overwrite aspect ratio; E.g. "ratio-10-17" or "ratio-2-1"
  
  @default: ratio-10-17
{% endcomment %}

{% if collection.metafields.c_f.jumplink_aspect_ratio %}
  {% assign ratio = collection.metafields.c_f.jumplink_aspect_ratio %}
{% endif %}

{% if product.metafields.c_f.jumplink_aspect_ratio %}
  {% assign ratio = product.metafields.c_f.jumplink_aspect_ratio %}
{% endif %}


{% assign background_size = 'cover' %}


{% comment %}
  Set background size
  metafield namespace: c_f
  metafield key: jumplink_background_size
  value: [c][p]Overwrite background size; E.g. "cover" or "contain"
  
  @default: cover
{% endcomment %}

{% if collection.metafields.c_f.jumplink_background_size %}
  {% assign background_size = collection.metafields.c_f.jumplink_background_size %}
{% endif %}

{% if product.metafields.c_f.jumplink_background_size %}
  {% assign background_size = product.metafields.c_f.jumplink_background_size %}
{% endif %}