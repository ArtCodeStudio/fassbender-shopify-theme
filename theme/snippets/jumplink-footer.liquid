{% comment %} footer desktop {% endcomment %}
<footer class="container-fluid footer pointer-events-none pt-5 d-none d-lg-block">
  {% comment %}
    MAINBAR
  {% endcomment %}
  <div class="row mainbar">

    {% comment %}
      MAINBAR LEFT
    {% endcomment %}
    <div class="col-auto">
      FASSBENDER
    </div>

    {% comment %}
      MAINBAR RIGHT
    {% endcomment %}
    <div class="ml-auto col-auto d-flex align-items-center">
      <shopify-linklist class="col-auto pointer-events-all small" rv-linklist="system.linklists.footer | json" vertical="false"></shopify-linklist>
    </div>
  </div>

  {% comment %}
    SUBBAR
  {% endcomment %}
  <div class="row subbar pt-2">
    <div class="col d-flex">
      <div class="mr-auto">
         
        <ul class="nav small" style="pointer-events: all;">
          <li class="nav-item">
            <div class="nav-link">
              2018 FASSBENDER. All rights reserved
            </div>
          </li>   
          <li class="nav-item">
            <a class="nav-link" href="#">
              Projected by Art+Code Studio
            </a>
          </li>    
          <li class="nav-item">
            <a class="nav-link" rv-slideout-toggler="right" href="#">
              Legal Area
            </a>
          </li>
        </ul>

      </div>
    </div>
  </div>

</footer>

{% comment %} footer smartphone {% endcomment %}
<div class="container-fluid d-block d-lg-none bg-white fixed-bottom py-1">
  <div class="row">
    <a class="col d-flex justify-content-center" rv-on-route-active="'/blogs/blog'" rv-route="'/blogs/blog'">
      <rv-icon class="cursor-pointer" rv-src="'{{ 'iconset-eye.svg' | asset_url }}'" height="32" width="32"></rv-icon>
    </a>

    <div class="col d-flex justify-content-center">
      <rv-icon class="cursor-pointer" rv-src="'{{ 'iconset-menu.svg' | asset_url }}'" height="32" width="32"></rv-icon>
    </div>

    <a class="col d-flex justify-content-center" rv-on-route-active="'/cart'" rv-route="'/cart'" href="/cart">
      <rv-icon class="cursor-pointer" rv-src="'{{ 'iconset-shopping-bag.svg' | asset_url }}'" height="32" width="32"></rv-icon>
    </a>
  </div>
</div>