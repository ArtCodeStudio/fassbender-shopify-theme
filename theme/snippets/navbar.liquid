            </li>
          </ul>

          <div class="navbar-right">
            <ul class="nav navbar-nav">
              {% if shop.customer_accounts_enabled %}

                {% if customer %}
                  <li class="customer-name hidden-xs hidden-sm hidden-md">
                    <a href="/account">
                      Hallo {{ customer.first_name }}
                    </a>
                  </li>
                  <li class="customer-account">
                    <a href="/account">
                      {{ 'navbar.shop_actions.my_account' | t }}
                    </a>
                  </li>
                  <li class="customer-wishlist">
                    <!-- include 'wishlist-link' -->
                  </li>
                  <li class="customer-logout hidden-xs">
                    <a href="/account/logout" class="no-barba">
                      {{ 'navbar.shop_actions.logout' | t }}
                    </a>
                  </li>
                {% else %}

                  {% if shop.metafields.bold_loyalties.active %}
                    <!-- Bold: Loyalty Points - Step 2 -->
                    {% include 'bold-loyalties-callout-nav' %}
