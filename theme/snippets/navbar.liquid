                    <img src="{{ 'search.svg' | asset_url }}" />
                  </div>
                </button>
              </span>
              <input name="q" type="search" id="search-field" class="form-control" placeholder="{{ 'navbar.shop_actions.search' | t }}" value="{{ search.terms | escape }}">
