<div class="container-fluid fixed-top navbar-main pointer-events-none">
  {% comment %}
    SUBBAR
  {% endcomment %}
  <div class="row subbar pt-2">
    <div class="col d-flex">
      <div class="ml-auto">
         
        <ul class="nav pointer-events-all">
          <li class="nav-item">
            <div class="nav-text">
              Welcome to the online home of covering trends, fashion inspiration and heigh end ready to wear pieces.
            </div>
          </li>
        </ul>

      </div>
    </div>
  </div>

  {% comment %}
    MAINBAR
  {% endcomment %}
  <div class="row mainbar">

    {% comment %}
      MAINBAR LEFT
    {% endcomment %}
    <div class="col-auto" style="position: fixed; width: auto; z-index: 1;">
      <div class="row">
        <a class="col-auto brand pointer-events-all" rv-route="/" href="/">
          <rv-iconset rv-src="'{{ 'iconset-logo.svg' | asset_url }}'" height="64" width="47"></rv-iconset>
        </a>
      </div>
      <div class="row pt-4">
        <shopify-linklist class="col-auto pointer-events-all" name="main-menu" vertical="true" pills="false"></shopify-linklist>
      </div>

      <div class="row pt-4">
        <shopify-filter class="col-auto pointer-events-all"></shopify-filter>
      </div>
    </div>

    {% comment %}
      MAINBAR RIGHT
    {% endcomment %}
    <div class="ml-auto col-auto d-flex align-items-center">
      <ul class="nav" style="pointer-events: all;">
        <li class="nav-item">
          <a class="nav-link" href="#">
            <rv-iconset rv-src="'{{ 'iconset-glass.svg' | asset_url }}'" size="24"></rv-iconset>
          </a>
        </li>   
        <li class="nav-item">
          <a class="nav-link" href="#">
            Cart
          </a>
        </li>    
        <li class="nav-item">
          <a class="nav-link" rv-slideout-toggler="right" href="#">
            <rv-iconset rv-src="'{{ 'iconset-menu.svg' | asset_url }}'" size="24"></rv-iconset>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>