{% assign type = article.metafields["global"]["type"] %}
{% assign color = article.metafields["global"]["color"] %}

{% case type %}
  {% when 'magazine' %}
    {% include 'jumplink-article-list-item-view-magazine', color: color %}
  {% when '2-grid-2-images' %}
    {% include 'jumplink-article-list-item-view-2-grid-2-images', color: color %}
  {% when '2-grid-story-product' %}
    {% include 'jumplink-article-list-item-view-2-grid-story-product', color: color, productDirection: 'right' %}
  {% when '2-grid-product-story' %}
    {% include 'jumplink-article-list-item-view-2-grid-story-product', color: color, productDirection: 'left' %}
  {% else %}
    {% include 'jumplink-article-list-item-view-magazine', color: color %}
{% endcase %}