{% if id == blank %}
  {% assign namespace = template | replace: '.', ' ' | truncatewords: 1, '' | handle %}
  {% assign id = 'instafeed-' | append: namespace %}
{% endif %}

<p class="col-xs-12 display-4 mb-4 text-center">
  Instagram
</p>

<div class="col-xs-12 col-md-8 offset-md-2 my-4">
  <div class="row" id="{{id}}"></div>
</div>

<p class="col-xs-12 lead my-4 text-center">
  <a target="_blank" href="{{ settings.home_instagram_follow_link }}">
    {{ 'home.instagram.follow' | t }}
  </a>
</p>