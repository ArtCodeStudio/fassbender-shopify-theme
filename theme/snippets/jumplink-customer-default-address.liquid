<div class="container-fluid pt-5" id="addresses">
  <div class="row pt-md-5">
    <div class="col-12 col-md-10 offset-md-2">
      <div class="row">
        <div class="col-12">
          <strong class="mb-3">Default address</strong>

          {% if customer.default_address %}
            <p class="mb-0">{{ customer_address.first_name }} {{ customer_address.last_name }}</p>
            <p class="mb-0">{{ customer.default_address.address1 }}</p>
            {% if customer.default_address.address2 != "" %}
              <p>{{ customer.default_address.address2 }}</p>
            {% endif %}
            <p class="mb-0">{{ customer.default_address.zip }} {{ customer.default_address.city}}</p>
            <p class="mb-0">{% if address.province_code %}{{ customer.default_address.province_code }}, {% endif %}{{ customer.default_address.country }}</p>
            <p class="mb-0">{{ customer.default_address.phone }}</p>
          {% endif %}
          <p class="mt-3">
            <a rv-route="'/account/addresses'" href="/account/addresses">
              <small>{{ 'customer.addresses.edit' | t }}</small>
            </a>
          </p>
         
        </div>
      </div>
    </div>
  </div>
</div>