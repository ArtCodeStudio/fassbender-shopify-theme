{% comment %}
    How many unlocked products are available?
{% endcomment %}
{% assign unlocked_count = 0 %}
{% if customer %}
    {% for product in collection.products %}
        {% assign collectionHandles = customer.metafields.c_f.jumplink_unlocked_collections | strip | remove: ' ' | split: ',' %}
        {% for collectionHandle in collectionHandles %}
        {% for collection in product.collections %}
            {% if collection.handle == collectionHandle %}
                {% assign unlocked_count = unlocked_count | plus: 1 %}
            {% endif %}
        {% endfor %}
        {% endfor %}
    {% endfor %}
{% endif %}