.alertify {

    position: fixed;
    background-color: rgba(0, 0, 0, .3);
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    z-index: 99999;

    &.hide {
        opacity: 0;
        pointer-events: none;
    }

    &, &.show {
        box-sizing: border-box;
        transition: all .33s cubic-bezier(.25, .8, .25, 1);
    }

    &, * {
        box-sizing: border-box;
    }

    .dialog {
       padding: 12px;
    }

    .dialog, .alert {

        width: 100%;
        margin: 0 auto;
        position: relative;
        top: 50%;
        transform: translateY(-50%);

        > * {
            width: 400px;
            max-width: 95%;
            margin: 0 auto;
            text-align: center;
            padding: $alertify-padding-base;
            background: #fff;
