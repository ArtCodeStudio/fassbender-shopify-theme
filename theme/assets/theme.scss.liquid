  $result: $sm  - 1px;

  @if($name == sm) {
    $result: $md - 1px;
  }
  @if($name == md) {
    $result: $lg - 1px;
  }
  @if($name == lg) {
    $result: $xl - 1px;
  }
  @if($name == xl) {
    $result: null;
  }
  
